class Book:
    def __init__(self, title, author, pages):
        self.title = title
        self.author = author
        self.pages = pages

    def __str__(self):
        return f"'{self.title}' by {self.author}, {self.pages} pages"

    def __eq__(self, other):
        return self.pages == other.pages

# إنشاء كتب
book1 = Book("Python Basics", "John Doe", 300)
book2 = Book("Learn Python", "Jane Smith", 300)
book3 = Book("Advanced Python", "Alice Brown", 400)

# مقارنة الكتب
print(book1)          # 'Python Basics' by John Doe, 300 pages
print(book1 == book2) # True (نفس عدد الصفحات)
print(book1 == book3) # False)
